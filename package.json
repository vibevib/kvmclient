{
  "name": "kvmclient",
  "version": "1.0.0",
  "description": "KVM Client - Remote Control client",
  "main": "main.js",
  "productName": "KVM Client",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "build": {
    "appId": "com.kvmclient.app",
    "productName": "KVM Client",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "sharp": "^0.34.5"
  }
}
